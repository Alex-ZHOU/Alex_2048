<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alex_2048"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    // 获取手机的通话权限
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    // 获取访问当前网络状态权限
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    // 获取完全网络访问权限
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".Application2048"
        android:allowBackup="true"
        android:icon="@drawable/ic_alex2048"
        android:label="@string/app_name"
        android:theme="@style/AppThemeNoTitleBar">
        <activity
            android:name=".LoginInActivity2048"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MainActivity2048"
            android:exported="false" />

        <activity
            android:name=".SignInActivity2048"
            android:exported="false"/>

        <service android:name=".service.Service2048" />

    </application>

</manifest>
