<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alex_2048.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_scoreTitle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/scoreTitle"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="222" />

                <TextView
                    android:id="@+id/tv_addScore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="111111"
                    android:textColor="#ff0000" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_restart"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/restart" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/back" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_chessGame"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_4x4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_0_0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_0_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_0_0"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_0_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_0_1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_0_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_0_2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_1_0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_0_0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_1_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_0_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_1_0"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_1_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_0_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_1_1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_1_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_0_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_1_2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_2_0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_1_0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_2_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_1_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_2_0"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_2_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_1_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_2_1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_2_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_1_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_2_2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_3_0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_2_0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_3_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_2_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_3_0"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_3_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_2_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_3_1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_3_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_2_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_3_2"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>